<html>
    <head>
        <link rel="stylesheet" href="/stylesheet/first-page.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <h1><b>წიგნების მაღაზია</b></h1>
        <div class="row mt-5">
            <% data.forEach((book) =>{ %>
                <div class="col-3 mb-5 cards">
                      <div class="card h-100">
                        <img src="<%= book['backdrop_path'] %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5><%= book['name'] %></h5>
                            <h6><%= book['author'] %></h6>
                            <p>შეფასებები არ არის</p>
                            <h3><%= book['price'] %></h3>
                            <a href="./book/<%= book['id']%>" class="button text-decoration-none w-50 mt-3"><h6>მეტი >></h6></a>
                        </div>
                      </div>
                </div>
                
                  <% }) %>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>