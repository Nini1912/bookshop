<html>
    <head>
        <link rel="stylesheet" href="/stylesheet/second-page.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
      <div class="container-fluid p-5">
        <div class="row">
          <div class="col-3">
            <img src="<%= item['backdrop_path'] %>" alt="">
          </div>
          <div class="col">
            <p>0 შეფასება<br><div class="status border w-25 ps-2"><%= item['status'] %></div></p>
            <h3><%= item['name'] %></h3>
            <h6 class="author"><%= item['author'] %></h6>
            <div class="price"><h2><%= item['price'] %></h2></div>
            <p>"<%= item['description'] %>"</p>
          </div>
          <div class="col border-div border border-2 pt-4">
            <h6>მახასიათებლები</h6>
            <div class="description">
              <div class="title">ISBN</div>
              <div><%= item['ISBN'] %></div>
            </div>
            <div class="description">
              <div class="title">გამომცემლობა</div>
              <div><%= item['publisher'] %></div>
            </div>
            <div class="description">
              <div class="title">გამოცემის წელი</div>
              <div><%= item['publishing_year'] %></div>
            </div>
            <div class="description">
              <div class="title">ყდა</div>
              <div><%= item['cover'] %></div>
            </div>
            <div class="description">
              <div class="title">გვერდების რაოდენობა</div>
              <div><%= item['number_of_pages'] %></div>
            </div>
            <div class="description">
              <div class="title">ფორმატი</div>
              <div><%= item['format'] %></div>
            </div>
            <div class="description">
              <div class="title">ენა</div>
              <div><%= item['language'] %></div>
            </div>
          </div>
        </div>
      </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>